{
  "name": "easymoney-desktop",
  "version": "1.0.0",
  "description": "EasyMoneyLoans Secure Desktop Application",
  "main": "main.js",
  "type": "commonjs",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win portable",
    "build:dir": "electron-builder --dir"
  },
  "author": "EasyMoneyLoans",
  "license": "UNLICENSED",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "better-sqlite3": "^11.0.0",
    "exceljs": "^4.4.0"
  },
  "build": {
    "appId": "com.easymoney.desktop",
    "productName": "EasyMoneyLoans",
    "copyright": "Copyright Â© 2024 EasyMoneyLoans",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ]
    },
    "files": [
      "main.js",
      "preload.js",
      "database.js",
      "updater.js"
    ],
    "extraResources": [
      {
        "from": "../frontend/build",
        "to": "app"
      }
    ],
    "asar": false
  }
}
