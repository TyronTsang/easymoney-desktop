{
  "name": "easymoney-desktop",
  "version": "1.0.2",
  "description": "EasyMoneyLoans Secure Desktop Application",
  "main": "main.js",
  "type": "commonjs",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win portable",
    "build:dir": "electron-builder --dir"
  },
  "author": "EasyMoneyLoans",
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "https://github.com/TyronTsang/easymoney-desktop.git"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^11.0.0",
    "exceljs": "^4.4.0"
  },
  "build": {
    "appId": "com.easymoney.desktop",
    "productName": "EasyMoneyLoans",
    "icon": "icon.ico",
    "copyright": "Copyright Â© 2024 EasyMoneyLoans",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "icon.ico"
    },
    "files": [
      "main.js",
      "preload.js",
      "database.js",
      "updater.js"
    ],
    "extraResources": [
      {
        "from": "../frontend/build",
        "to": "app"
      }
    ],
    "asar": false,
    "publish": [
      {
        "provider": "github"
      }
    ]
  }
}
